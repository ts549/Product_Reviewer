import pandas as pd
import re
import string

class TextProcessor:
    
    @staticmethod
    def clean_data(data):
        for reviewer, review in data.items():
            review

            review = review.lower()
            review = re.sub('\[.*?\]', '', review)
            review = re.sub(' \[ \n\]', ' ', review)

            data[reviewer] = review

